{
    "name": "nextjs-boilerplate",
    "description": "Boilerplate and Starter Kit for Next.js 14+, Tailwind CSS 3.3, and TypeScript 5+.",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "npm": ">=10.*",
        "node": ">=20.x"
    },
    "scripts": {
        "dev": "next dev",
        "dev:debug-ssc": "cross-env NODE_OPTIONS='--inspect' next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "css:lint": "stylelint \"**/*.css\"",
        "css:lint-fix": "stylelint \"**/*.css\" --fix",
        "prettify": "prettier --write .",
        "prepare": "husky"
    },
    "dependencies": {
        "next": "14.1.4",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@commitlint/cli": "19.2.1",
        "@commitlint/config-conventional": "19.1.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.0.1",
        "cross-env": "7.0.3",
        "eslint": "^8",
        "eslint-config-next": "14.1.4",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "husky": "9.0.11",
        "lint-staged": "15.2.2",
        "postcss": "^8",
        "prettier": "3.2.5",
        "prettier-plugin-tailwindcss": "0.5.13",
        "stylelint": "16.3.1",
        "stylelint-config-standard": "36.0.0",
        "tailwindcss": "^3.3.0",
        "typescript": "^5"
    }
}
